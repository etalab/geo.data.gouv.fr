{
  "name": "geo.data.gouv.fr",
  "private": true,
  "version": "3.2.0",
  "license": "MIT",
  "scripts": {
    "dev": "node server",
    "build": "next build",
    "start": "cross-env NODE_ENV=production node server",
    "test": "cross-env NODE_ENV=test jest",
    "lint": "npm run lint:scripts",
    "lint:scripts": "xo",
    "heroku-postbuild": "yarn install --production=false && yarn build"
  },
  "dependencies": {
    "chart.js": "^2.7.1",
    "compression": "^1.7.1",
    "express": "^4.16.2",
    "hoist-non-react-statics": "^2.3.1",
    "i18next": "^10.2.1",
    "i18next-express-middleware": "^1.0.7",
    "i18next-node-fs-backend": "^1.0.0",
    "i18next-xhr-backend": "^1.5.0",
    "isomorphic-unfetch": "^2.0.0",
    "leaflet": "^1.2.0",
    "lodash": "^4.17.4",
    "lodash-es": "^4.17.4",
    "marked": "^0.3.7",
    "moment": "^2.19.4",
    "next": "^4.2.1",
    "node-sass": "^4.7.2",
    "nprogress": "^0.2.0",
    "prop-types": "^15.6.0",
    "react": "^16.2.0",
    "react-chartjs-2": "^2.6.1",
    "react-dom": "^16.2.0",
    "react-i18next": "^7.1.1",
    "react-icons": "^2.2.7",
    "react-leaflet": "^1.7.8",
    "react-table": "^6.7.5",
    "styled-jsx": "^2.2.1",
    "styled-jsx-plugin-sass": "^0.2.2",
    "underscore.string": "^3.3.4",
    "webpack-bundle-analyzer": "^2.9.1"
  },
  "resolutions": {
    "chart.js/moment": "^2.19.4"
  },
  "devDependencies": {
    "babel-eslint": "^8.0.3",
    "babel-plugin-dotenv-import": "^1.3.0",
    "babel-plugin-inline-import": "^2.0.6",
    "babel-plugin-lodash": "^3.3.2",
    "codecov": "^3.0.0",
    "cross-env": "^5.1.1",
    "enzyme": "^3.2.0",
    "enzyme-adapter-react-16": "^1.1.0",
    "eslint-config-xo-nextjs": "^1.1.1",
    "eslint-plugin-react": "^7.5.1",
    "jest": "^21.2.1",
    "jest-junit": "^3.4.0",
    "lerna-changelog": "^0.7.0",
    "mock-local-storage": "^1.0.5",
    "raf": "^3.4.0",
    "react-test-renderer": "^16.2.0",
    "webpack": "^3.10.0",
    "xo": "^0.18.2"
  },
  "browserslist": [
    "> 1%"
  ],
  "engines": {
    "node": "8.x",
    "yarn": "1.x"
  },
  "jest": {
    "verbose": true,
    "setupFiles": [
      "<rootDir>/jest.setup.js"
    ],
    "testMatch": [
      "<rootDir>/tests/**/*.test.js"
    ],
    "collectCoverage": true,
    "collectCoverageFrom": [
      "components/**/*.js",
      "lib/**/*.js"
    ],
    "coverageReporters": [
      "lcov",
      "text-summary",
      "html"
    ],
    "testResultsProcessor": "jest-junit"
  },
  "jest-junit": {
    "output": "reports/tests/junit.xml"
  },
  "xo": {
    "extends": "xo-nextjs",
    "semicolon": false,
    "space": 2,
    "env": "browser",
    "rules": {
      "camelcase": "warn",
      "import/no-unresolved": [
        "error",
        {
          "ignore": [
            "@env"
          ]
        }
      ]
    },
    "overrides": [
      {
        "files": "tests/**/*.test.js",
        "env": [
          "browser",
          "jest"
        ]
      }
    ]
  }
}
